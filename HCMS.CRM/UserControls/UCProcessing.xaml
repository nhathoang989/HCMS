<UserControl x:Class="HCMS.CRM.UserControls.UCProcessing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCMS.CRM.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="1" Name="MainProgressBar" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" />
            <TextBlock Grid.Row="2" HorizontalAlignment="Center" Text="{Binding Path=IsProcessing}" Name="ProgressTexBlock" />
        </Grid>
</UserControl>
